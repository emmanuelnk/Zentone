<div class="container-fluid">
    {{#if messages.success}}
    <div role="alert" class="alert alert-success">
      {{#each messages.success}}
        <div>{{msg}}</div>
      {{/each}}
    </div>
  {{/if}}
    {{#if messages.error}}
    <div role="alert" class="alert alert-danger">
      {{#each messages.error}}
        <div>{{msg}}</div>
      {{/each}}
    </div>
  {{/if}}
    {{#if messages.info}}
    <div role="alert" class="alert alert-info">
      {{#each messages.info}}
        <div>{{msg}}</div>
      {{/each}}
    </div>
  {{/if}}
    <div class="carousel slide" data-ride="carousel" id="presentation">
        <div class="carousel-inner" role="listbox"></div>
        <div>
            <a class="carousel-control-prev" href="#presentation" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#presentation" role="button" data-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <ol class="carousel-indicators"></ol>
    </div>
    <div class="simple-slider">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <div class="swiper-slide img-dummy"></div>
                <div class="swiper-slide img-dummy"></div>
                <div class="swiper-slide img-dummy"></div>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-9 offset-lg-0">
                    <a href="#"><img src="img/itsme.jpg" class="img-user"></a>
                </div>
                <div class="col-3 views">
                    <a href="#"><span class="text-muted">100 views</span></a>
                </div>
            </div>
            <div class="row">
                <div class="col-3">

                </div>
                <div class="col-3 button-slides">
                    <a class="slide-random" href="#presentation" data-slide="prev">
                        random
                    </a>
                </div>
                <div class="col-3 button-slides">
                    <a class="slide-next" href="#presentation" data-slide="next">
                        next
                    </a>
                </div>
                <div class="col-3">
                    <a href="#" id="button-share">
                        <i class="fas fa-share-square pull-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
