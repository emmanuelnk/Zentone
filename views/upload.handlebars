<div class="container-fluid">
    {{#if messages.success}}
        <div role="alert" class="alert alert-success">
            {{#each messages.success}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    {{#if messages.error}}
        <div role="alert" class="alert alert-danger">
            {{#each messages.error}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    {{#if messages.info}}
        <div role="alert" class="alert alert-info">
            {{#each messages.info}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    <body style="padding:0 80px;">
    <div>
        <img src="img/open-archive-bg.jpg" width="100%">
        <form id="slide-form">
            <input class="form-control"
                   type="text"
                   name="title"
                   required=""
                   placeholder="Add Title Here (up to 100 characters)"
                   maxlength="100"
                   minlength="1"
                   style="margin:20px;width:100%;">
            <input class="form-control"
                   type="text"
                   name="tags"
                   required=""
                   placeholder="Add up to three tags for your post, separated by commas; for example: fashion, technology, startups"
                   style="font-size:10px;margin:20px;width:100%;">
            <input class="form-control"
                   type="text"
                   required=""
                   placeholder="Enter the presentation's description or a blog post here."
                   style="font-size:12px;margin:20px;width:100%;height:60%;">
        </form>
        <div class="carousel slide" data-ride="carousel" id="carousel-1">
            <div class="carousel-inner" role="listbox"></div>
            <div>
                <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <ol class="carousel-indicators"></ol>
        </div>
    </div>
    </body>
</div>
